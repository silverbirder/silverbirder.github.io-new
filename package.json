{
  "name": "silverbirder.github.io",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "ci:fix": "pnpm knip:fix && pnpm lint:fix && pnpm format && pnpm check-types && pnpm test:fix && pnpm build",
    "deps:up": "pnpm -r up",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" \"!packages/content/**/*.md\"",
    "generate:feature": "turbo gen feature",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "turbo run lint",
    "lint-staged": "lint-staged",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:fix": "turbo run test -- --update"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "knip": "^5.80.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=24.x"
  }
}
